            <Font size="14.0" />
         </font></TextField>
        <Text layoutX="176.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create new account">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <Button fx:id="registerButton" layoutX="119.0" layoutY="253.0" mnemonicParsing="false" onAction="#startRegistration" prefHeight="32.0" prefWidth="128.0" text="Sign up">
